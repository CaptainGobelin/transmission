script/source = "extends Node2D

export(String, FILE) var json_path

var dict = {}
var next_char = 0
var current_page = 0
var page_done = true
onready var text = get_node(\"Text\")
onready var timer = get_node(\"Timer\")
onready var button_prev = get_node(\"PrevPage\")
onready var button_next = get_node(\"NextPage\")

func _ready():
	# Called every time the node is added to the scene.
	# Initialization here

	var file = File.new()
	file.open(json_path, file.READ)
	var json_text = file.get_as_text()
	dict.parse_json(json_text)
	file.close()
	
	timer.connect(\"timeout\", self, \"tick\")
	timer.start()
	page_done = false

	button_prev.connect(\"pressed\", self, \"prev_page_pressed\")
	button_next.connect(\"pressed\", self, \"next_page_pressed\")
	
	if (dict[\"text\"].size() > 1):
		button_next.show()

func tick():
	show_next_char()

func show_next_char():
	text.text += dict[\"text\"][current_page][next_char]
	next_char += 1
	if (next_char >= dict[\"text\"][current_page].length()):
		timer.stop()
		page_done = true

func next_page_pressed():
	var ret = false
	while (not page_done):
		show_next_char()
		ret = true
	if (ret):
		return
	
	if (current_page < dict[\"text\"].size() - 1):
		current_page += 1
		text.text = \"\"
		next_char = 0
		timer.start()
		page_done = false
		button_prev.show()
		button_next.hide()

func prev_page_pressed():
	var ret = false
	while (not page_done):
		show_next_char()
		ret = true
	if (ret):
		return
	
	if (current_page > 0):
		current_page -= 1
		text.text = \"\"
		next_char = 0
		timer.start()
		page_done = false
		button_prev.hide()
		button_next.show()
	"

